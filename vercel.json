{
  "functions": { "api/**/*.py": { "maxDuration": 10, "memory": 1024 } },
  "routes": [
    {
      "src": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type"
      }
    }
  ],
  "crons": [
    { "path": "/api/run_once?symbol=EURUSD=X&tf=1h", "schedule": "*/15 * * * *" },
    { "path": "/api/retrain_now", "schedule": "0 */2 * * *" }
  ]
}